---
import Layout from "../layouts/Layout.astro";
import {
  SignedIn,
  SignedOut,
  UserButton,
  SignInButton,
} from "@clerk/astro/components";
---

<Layout>
  <SignedIn>
    <h1 class="text-2xl font-bold text-center text-blue-600">Hola Usuario!</h1>
  </SignedIn>
  <SignedOut>
    <h1 class="text-2xl font-bold text-center text-blue-600">Bienvenido!</h1>
    <UserButton />
    <SignInButton class="mt-4">Registrarse</SignInButton>
  </SignedOut>
</Layout>
